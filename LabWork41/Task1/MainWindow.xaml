<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Menu x:Name="Menu" Width="0">
            <MenuItem x:Name="TestMenuItem" Header="Тест кнопка"/>
        </Menu>
        <Button x:Name="OpenMenuButton" Width="50" Height="50" VerticalAlignment="Top" Click="OpenMenuButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Hamburger_icon.svg.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
