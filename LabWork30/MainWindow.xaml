<Window x:Class="LabWork30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork30"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Логин"/>
        <Label Content="Email" Grid.Row="1"/>
        <TextBox Grid.Column="1"/>
        <TextBox Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="SubscribeButton" Content="Подписаться" Grid.Row="2" IsEnabled="False"/>
        <CheckBox x:Name="AllowCheckBox" Grid.Column="1" Content="Я согласен на получение рассылки" Grid.Row="2" 
                  Checked="AllowCheckBox_Checked"  Unchecked="AllowCheckBox_Checked"/>

    </Grid>
</Window>
