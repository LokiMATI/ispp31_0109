<Window x:Class="Task1234.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1234"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox" TextWrapping="Wrap" AcceptsReturn="True" Grid.ColumnSpan="2"/>
        <Button x:Name="OpenButton" Grid.Row="1" Content="Открыть" Click="OpenButton_Click"/>
        <Button x:Name="SaveButton" Grid.Column="1" Grid.Row="1" Content="Сохранить" Click="SaveButton_Click"/>
    </Grid>
</Window>
