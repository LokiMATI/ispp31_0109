<Window x:Class="Task5.ColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="Выбор цвета" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="OkButton" Content="ОК" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Отмена" IsCancel="True"/>
        </StackPanel>
        <Label Content="Red"/>
        <Slider x:Name="RedSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
        <Label Content="Green"/>
        <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
        <Label Content="Blue"/>
        <Slider x:Name="BlueSlider"  Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
        <Rectangle x:Name="Rectangle" Height="20"/>
    </StackPanel>
</Window>
