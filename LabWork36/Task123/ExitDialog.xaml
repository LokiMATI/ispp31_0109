<Window x:Class="Task123.ExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task123"
        mc:Ignorable="d"
        Title="Подтверждение" Height="148" Width="350" ResizeMode="NoResize" Icon="/ExitIcon.PNG">
    <Canvas>
        <Image Source="/Question.png" Height="80" Width="65" Canvas.Left="33" Canvas.Top="21" />
        <TextBlock Canvas.Left="135" TextWrapping="Wrap" Text="Вы хотите закрыть приложение?" Canvas.Top="36"/>
        <Button x:Name="OkButton" Click="OkButton_Click" Content="Да" Width="40" Background="LightGreen" Canvas.Left="205" Canvas.Top="77" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="#FFC7C7C7" IsDefault="True"/>
        <Button Content="Нет" Width="40" Background="LightPink" Canvas.Left="262" Canvas.Top="77" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#FFC7C7C7" IsCancel="True"/>
    </Canvas>
</Window>
