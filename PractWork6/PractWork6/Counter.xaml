<UserControl x:Class="PractWork6.Counter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PractWork6"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100">
    <DockPanel>
        <Button x:Name="ReduceButton" Width="30" Content="-" Click="ReduceButton_Click" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="IncreaseButton" Width="30" Content="+" Click="IncreaseButton_Click" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="TextBox" Text="{Binding Value}" IsReadOnly="True" TextAlignment="Center"/>
    </DockPanel>
</UserControl>
