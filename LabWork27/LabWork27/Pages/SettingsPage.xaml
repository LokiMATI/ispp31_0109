<Page x:Class="LabWork27.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Настройки">


    <TabControl Grid.Row="1">
        <TabItem Header="GroupBox">
            <StackPanel>
                <GroupBox Header="О программе">
                    <GroupBox.Content>
                        <Label>Тестовая программа.</Label>
                    </GroupBox.Content>
                </GroupBox>
                <GroupBox Header="Цветовая тема">
                    <GroupBox.Content>
                        <StackPanel>
                            <RadioButton>Темная</RadioButton>
                            <RadioButton>Светлая</RadioButton>
                        </StackPanel>
                    </GroupBox.Content>
                </GroupBox>
                <GroupBox Header="Размер текста">
                    <StackPanel>
                        <RadioButton>Мелкий</RadioButton>
                        <RadioButton>Средний</RadioButton>
                        <RadioButton>Большой</RadioButton>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="Expander">
            <StackPanel>
                <Expander Header="О программе">
                    <Expander.Content>
                        <Label>Тестовая программа.</Label>
                    </Expander.Content>
                </Expander>
                <Expander Header="Цветовая тема">
                    <Expander.Content>
                        <StackPanel>
                            <RadioButton>Темная</RadioButton>
                            <RadioButton>Светлая</RadioButton>
                        </StackPanel>
                    </Expander.Content>
                </Expander>
                <Expander Header="Размер текста">
                    <StackPanel>
                        <RadioButton>Мелкий</RadioButton>
                        <RadioButton>Средний</RadioButton>
                        <RadioButton>Большой</RadioButton>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </TabItem>
        <TabItem Header="Игры">
            <StackPanel x:Name="Games">
            </StackPanel>
        </TabItem>
    </TabControl>
</Page>
