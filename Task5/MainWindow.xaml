<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Красный цвет"/>
        <Slider x:Name="RedSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
        <CheckBox x:Name="RedSliderEnabledCheckBox" Content="Выбрать красный цвет" IsChecked="True" IsThreeState="False"
                  Checked="SliderEnabledCheckBox_Checked"/>
        
        <Label Content="Зелёный цвет"/>
        <Slider x:Name="GreenSlider" Minimum="0" Maximum="255"/>
        <CheckBox x:Name="GreenSliderEnabledCheckBox" Content="Выбрать зелёный цвет" IsChecked="True" IsThreeState="False"/>
        
        <Label Content="Синий цвет"/>
        <Slider x:Name="BlueSlider" Minimum="0" Maximum="255"/>
        <CheckBox x:Name="BlueSliderEnabledCheckBox" Content="Выбрать синий цвет" IsChecked="True" IsThreeState="False"/>
    </StackPanel>
</Window>
