<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" RadioButton.Checked="FontSizeRadioButton_Checked">
                <RadioButton Content="10" />
                <RadioButton Content="20" />
                <RadioButton Content="30" />
            </StackPanel>
            <RadioButton Content="Left" Checked="LeftTextAlignmentRadioButton_Checked"/>
            <RadioButton Content="Center" Checked="CenterTextAlignmentRadioButton_Checked"/>
            <RadioButton Content="Right" Checked="RightTextAlignmentRadioButton_Checked"/>
        </StackPanel>
        <TextBox Name="TextBox" Height="300" FontSize="10"/>
    </StackPanel>
</Window>
