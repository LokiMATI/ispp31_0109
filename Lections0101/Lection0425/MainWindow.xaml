<Window x:Class="Lection0425.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lection0425"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="FileInfoTemplate">
            <StackPanel Width="200">
                <TextBlock Text="{Binding Name}" FontSize="20" FontStyle="Italic" Foreground="Red"/>
                <TextBlock Text="{Binding Length}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="FullFileInfoTemplate">
            <StackPanel Width="200">
                <TextBlock Text="{Binding Name}" FontSize="20" FontStyle="Oblique" Foreground="Black"/>
                <TextBlock Text="{Binding Length}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <StackPanel>

        <ListView x:Name="FilesListView" Height="300"
                  ItemTemplate="{StaticResource FileInfoTemplate}"
                  
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <Button x:Name="ChangeButton" Content="Change" Click="ChangeButton_Click"/>

        <TextBlock Text="---"/>

        <ListBox x:Name="UsersListBox" Height="100"/>
        <ListBox x:Name="FilesListBox" Height="200"
                 DisplayMemberPath="Name"
                 />
    </StackPanel>
</Window>
